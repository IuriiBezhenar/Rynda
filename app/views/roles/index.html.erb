<h3 align="center">
  <%= Const::STR_MSG_ROLE_LIST %>
  <%#= link_to export_xls, url_for(:format => 'xls') %>
</h3>

<% if @roles.count > 0 %>
  <%= will_paginate %>
  <ul class="shared_list">
    <table class="details">
      <tr>
        <th><%= Const::STR_LABEL_NAME %></th>
        <th><%= Const::STR_LABEL_DESCRIPTION %></th>
        <th><%= Const::STR_LABEL_ACTIONS %></th>
      </tr>
      <%= render @roles %>
    </table>
  </ul>
  <%= will_paginate %>
<% else %>
  <br /><h3 align="center"><%= Const::STR_MSG_EMPTY_ROLE_LIST %></h3>
<% end %>

<% if privilege_granted?(@protected_class, Const::STR_PA_CREATE) %>
  <%= link_to Const::STR_ACTION_CREATE_ROLE,
        new_role_path, :class => "new_item_button round" %>
<% end %>
